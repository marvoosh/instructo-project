<div class="container mt-4">
  <%= form_tag instructors_path, method: :get do %>
    <div class="row">
      <div class="form-group find-instructor pr-3">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find an instructor"
        %>
      </div>
      <div class="form-group">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

  <div class="cards-box">
    <div class="cards">
      <% @instructors.each do |instructor| %>
        <div class="card" style="width: 18rem;">
          <% if instructor.cover_url.nil? %>
            <%= image_tag 'https://source.unsplash.com/IuLgi9PWETU', alt: "card image", class: "card-img-top", style: "height: 220px"%>
          <% else %>
            <%= image_tag instructor.cover_url, alt: "card image", class: "card-img-top", style: "height: 220px"%>
          <% end %>
          <div class="card-body">
            <div class="card-body-text">
              <h5 class="card-title"><%= instructor.first_name %> <%= instructor.last_name %></h5>
              <p class="card-text">Expertise: <%= instructor.expertise %></p>
            </div>
            <div class="card-footer-price">
              <%= link_to 'See profile', instructor_path(instructor), class: "button" %>
              <div class="price">
                <h5><%="Â£ #{instructor.price}"%></h5>
                <p>/hour</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
